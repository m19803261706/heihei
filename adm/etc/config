# 发布版本的服务器地址(local表示本地)
release server : local

# 版本服务器接收的客户端地址
127.0.0.1 4000 : valid		       # 本地

# 本地能够接纳的最大用户数目
max users : 1000

# 本地限制巫师登录的等级
wiz lock : 0

# INTERNET互连网络中MUD的名字
internet mud name : zwymud

# MUDOS
& mudos : MudOS v22pre11-bin

# 编码方式
encoding : GB

# SMTP服务器地址/端口号
smtp server : 220.181.12.16 25

# SMTP服务器的名字
smtp domain : smtp

# 系统使用SMTP服务器时填写的发送者
smtp sender : 18770773@qq.com

# 和本系统相联系的MUD服务器

# 玩家数据错误时是否要求重新创建玩家
ask_recreate : 0

# PK 限制
max pk perday : 3
max pk perman : 1

# 自动检查
enable auto examine : 0

# 需要时自动记录日志
enable auto log : 0

# SMTP认证信息
smtp auth user : 18770773	
